---
// Layout
import MainLayout from "../layouts/MainLayout.astro";

// Components
import Link from "../components/Link.astro";
---

<MainLayout title="Page not found">
  <div
    class="container"
    style={{
      display: "grid",
      placeItems: "center",
      textAlign: "center",
      gap: "var(--space-sm)",
    }}
  >
    <div>
      <h1 class="h1">Welp, this is awkward!</h1>
      <p>We seem to have misplaced something...</p>
    </div>
    <Link
      href="/"
      text="Go Home"
      style="secondary"
      icon={{
        name: "tabler:home",
        side: "right",
      }}
    />
  </div>
</MainLayout>
