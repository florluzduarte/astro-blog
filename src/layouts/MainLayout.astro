---
// components
import MainHead from "./MainHead.astro";

// styles
import "../styles/global.scss";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Astro Blog",
  description = "A blog built with the power of Astro",
} = Astro.props as Props;
---

<html lang="en">
  <MainHead title={title} description={description} />
  <body>
    <slot />
  </body>
</html>
